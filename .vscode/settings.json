{
  "editor.formatOnSave": true,
  "editor.rulers": [
    80
  ],
  "explorer.sortOrder": "type",
  "files.exclude": {
    "**/*.pyc": true,
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.pytest_cache/": true,
    "**/.svn": true,
    "**/__pycache__": true,
    "*.egg-info": true,
    "*.egg-info/": true,
    ".idea": true,
    "demo": true,
    "venv": true
  },
  "python.formatting.provider": "black",
  "python.linting.pylintArgs": [
    "--disable",
    "protected-access,bare-except,expression-not-assigned,line-too-long,missing-module-docstring,unused-wildcard-import,missing-function-docstring,attribute-defined-outside-init"
  ],
  "python.pythonPath": ".venv\\Scripts\\python.exe",
  "python.testing.unittestEnabled": false,
  "python.testing.nosetestsEnabled": false,
  "python.testing.pytestEnabled": true
}